<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Logo o título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traductor LSM"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Contenedor de la camara -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImagen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLectura"
        app:layout_constraintHeight_percent="0.5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.camera.view.PreviewView
                android:id="@+id/preview_view_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:scaleType="fillCenter" />

            <com.example.traductorlsm.OverlayView
                android:id="@+id/overlayView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botón tomar foto -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLectura"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Traducir"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_abc"
        app:iconGravity="start"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardImagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLimpiar"
        app:layout_constraintWidth_percent="0.48" />

    <!-- Botón limpiar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLimpiar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Limpiar"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:iconGravity="start"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toTopOf="@id/btnLectura"
        app:layout_constraintStart_toEndOf="@id/btnLectura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48" />

    <!-- Botón analizar -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTraduccion"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:padding="5dp"
        android:textStyle="bold"
        android:hint="Traducción"
        android:textColor="@color/black"
        android:scrollbars="vertical"
        android:enabled="true"
        app:cornerRadius="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnLectura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>